@model VirtualStore.Models.Product

@{
    ViewData["Title"] = "Product Form";
    var storeId = ViewBag.StoreId;
    var spaceId = ViewBag.SpaceId;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <input asp-for="SpaceId" type="hidden" />
    <input type="hidden" name="storeId" value="@storeId" />
    <input type="hidden" name="spaceId" value="@spaceId" />


    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Count" class="form-label">Count</label>
        <input asp-for="Count" type="number" class="form-control" />
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Store" asp-action="Details" asp-route-id="@storeId" class="btn btn-secondary ms-2">Cancel</a>
</form>
