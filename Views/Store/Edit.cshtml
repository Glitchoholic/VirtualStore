@model VirtualStore.Models.Store

@{ ViewData["Title"] = "Edit Store"; }

<link rel="stylesheet" href="~/wwwroot/css/bootstrap.min.css" />

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="IsMain" class="form-check-input" />
        <label asp-for="IsMain" class="form-check-label">Is Main</label>
    </div>
    <div class="form-check">
        <input asp-for="IsInvoiceDirect" class="form-check-input" />
        <label asp-for="IsInvoiceDirect" class="form-check-label">Is Invoice Direct</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
